<% if @notification.errors.any? %>
  <% @notification.errors.full_messages.each do |error| %>
    $(".alerta").html('<div class="alert alert-error"><%= j( error ) %></div>');
  <% end %>
<% else %>
$(".alerta").html('<div class="alert alert-success">Notificacion creada correctamente</div>');
$("#notification_title").val("");
$("#notification_description").val("");
<% end %>